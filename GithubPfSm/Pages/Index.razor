@page "/"





<AntDesign.Title Level="1">
    Enter Github Username
</AntDesign.Title>
<Select ShowSearch
        Style="width:200px"
        Placeholder="input search text"
        ShowArrow="false"
        FilterOption="false"
        DefaultActiveFirstOption="false"
        OnSearch="@OnSearch"
        OnChange="@OnChange">
    @foreach (var value in _items)
    {
        <SelectOption Value="@value.Login">
            <AntDesign.Space>
                <AntDesign.SpaceItem>
                    <AntDesign.Avatar Src="@value.AvatarUrl" Size="small"/>
                </AntDesign.SpaceItem>
                <AntDesign.SpaceItem>
                    @value.Login
                </AntDesign.SpaceItem>
            </AntDesign.Space>
        </SelectOption>
    }
</Select>



